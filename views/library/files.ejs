<div>
    <%if(locals.files && locals.files.length>0) {%>
        <%locals.files.forEach( file => {%>
            <div>
                <section>
                    <ul>
                        <li> <a href= <%=file.url %> ><%= file.OriginalName %></a></li>
                        <li><%= file.size %>Bytes</li>
                        <li><%= file.updatedAt %></li>
                        <li>
                            <form method="get" action=<%= file.editFileLink %>>
                                <div>
                                    <input type="submit" value="edit" name="delete">
                                </div>
                            </form>
                        </li>
                        <li>
                            <form method="post" action=<%= file.fileDeleteAction %>>
                                <div>
                                    <input type="submit" value="delete" name="delete">
                                </div>
                            </form>
                        </li>
                    </ul>
                </section>
        <%})%>
    <%} else {%>
        <p>No files are found...</p>
    <%}%>
</div>