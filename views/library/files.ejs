<div>
    <%if(locals.files && locals.files.length>0) {%>
        <%locals.files.forEach( file => {%>
            <ul>
                <li> <a href= <%=file.url %> ><%= file.OriginalName %></a></li>
                <li><%= file.size %>Bytes</li>
                <li><%= file.updatedAt %></li>
            </ul>
        <%})%>
    <%} else {%>
        <p>No files are found...</p>
    <%}%>
</div>