generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int       @id @default(autoincrement())
  username String
  password String    @db.VarChar(15)
  files    Files[]
  folders  Folders[]
}

model Folders {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(25)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  files     Files[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Files {
  id           Int      @id @default(autoincrement())
  url          String
  fileName     String   @unique
  OriginalName String   
  size         Int
  folders      Folders? @relation(fields: [foldersId], references: [id])
  author       User     @relation(fields: [authorId], references: [id])
  foldersId    Int?
  authorId     Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
